<% provide(:title, "Editing #{@user.name}") %>

<%= form_for @user, :html => { :class => "form-horizontal edit-user" } do |f| %>
  <% if @user.errors.any? %>
    <div class="error_messages">
      <h2>Oops!</h2>
      <ul>
        <% for message in @user.errors.full_messages %>
          <li><%= message %></li>
        <% end -%>
      </ul>
    </div>
  <% end -%>

  <fieldset>
    <div class="control-group">
      <%= f.label :name, :class => "control-label" %>
      <div class="controls">
        <%= f.text_field :name %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :status, :class => "control-label" %>
      <div class="controls">
        <%= f.text_field :status, :placeholder => 'Second-Year Anthropology MA' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :email, :class => "control-label" %>
      <div class="controls">
        <%= f.text_field :email %>
      </div>
    </div>

    <div class="control-group success">
      <%= f.label :password, :class => "control-label" %>
      <div class="controls">
        <%= f.password_field :password, :placeholder => 'Required' %>
      </div>
    </div>     

    <div class="form-actions">
      <%= f.button "Save", :class => "btn btn-primary" %>
    </div>
  </fieldset>

<% end %>
